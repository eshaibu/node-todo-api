{
  "name": "node-todo-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "npx babel src/ --out-dir dist/",
    "dev": "nodemon --exec babel-node src/index.js",
    "dev:lint": "nodemon src/index.js --exec \"npm run lint:watch && babel-node\"",
    "pretest": "export NODE_ENV=test && npm run lint:watch",
    "test:api": "export NODE_ENV=test && nyc --reporter=html mocha --opts ./src/test/utils/mocha.opts ./src/test/v1/*.test.js --exit",
    "test": "npm run test:api && nyc report",
    "lint:watch": "esw src",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "format": "prettier-eslint 'src/**/*.{js,json}' --write",
    "check:lint": "prettier-eslint --list-different \"src/**/*.{js,json}\""
  },
  "lint-staged": {
    "**/*.js": [
      "prettier-eslint --write \"src/**/*.{js,json}\"",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">= 8.11.4",
    "npm": ">= 5.6.0"
  },
  "keywords": [
    "Express",
    "RestAPI",
    "MongoDB",
    "Mongoose",
    "Todo"
  ],
  "author": "Shaibu Emmanuel <emmanueltemitopeshaibu@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-watch": "^5.1.2",
    "husky": "^2.2.0",
    "lint-staged": "^13.1.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "prettier-eslint-cli": "^4.7.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "js-logger": "^1.6.0",
    "mongoose": "^5.5.7",
    "morgan": "^1.9.1",
    "validatorjs": "^3.15.1"
  }
}
